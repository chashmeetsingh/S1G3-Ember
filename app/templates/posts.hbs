<div class="container" style="margin-top: 40px;">
  <h3>New Post</h3>
  <ul class="post-publish">
    <li>
      {{input value=title placeholder="Title" id="postTitle"}}
    </li>
    <li>
      {{textarea value=body placeholder="Body" class="materialize-textarea" id="postBody"}}
    </li>
    <li>
      <button class="btn waves-effect waves-light light-blue lighten-1" {{action "publishPost"}}>Create New Post
        <i class="material-icons left">add</i>
      </button>
    </li>
  </ul>
</div>

<section class="container" style="margin-top: 50px;">
  {{#each model as |post|}}
  <div class="card light-blue lighten-1">
    <div class="card-content white-text">
      <span class="card-title">{{post.title}}</span>
      <p>{{post.body}}</p>
    </div>
    <div class="card-action">
      <button class="btn waves-effect waves-light greene lighten-1" {{action "openEditModal" post}} style="margin-right: 10px;">Edit Post</button>
      <button class="btn waves-effect waves-light red lighten-1" {{action "openDeleteModal" post}}>Delete Post</button>
    </div>
  </div>
  {{/each}}
</section>

{{#ui-modal name="deletePost" class="deletePost" }}
  <div class="header">
    Are you sure you want to delete this post?
  </div>

  <div class="actions">
    <div class="ui black deny button">
      Cancel
    </div>
    <div class="ui positive right labeled icon button">
      Confirm
      <i class="checkmark icon"></i>
    </div>
  </div>
{{/ui-modal}}

{{#ui-modal name="editPost" class="editPost" }}
  <div class="header">
    Edit Post
  </div>
  <div class="content">
    <div class="ui form">
      <div class="field">
        <label>Post Title</label>
        {{input type="text" cols="50" rows="1" value="Title" placeholder="add title" id="editPostTitle"}}
      </div>
      <div class="field">
        <label>Post Body</label>
        {{textarea value="body"cols="50"rows="3" placeholder="add body" id="editPostBody"}}
      </div>
    </div>
  </div>

  <div class="actions">
    <div class="ui black deny button">
      Cancel
    </div>
    <div class="ui positive right labeled icon button">
      Update Post
      <i class="checkmark icon"></i>
    </div>
  </div>
{{/ui-modal}}